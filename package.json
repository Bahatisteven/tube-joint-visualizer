{
  "name": "tube-joint-visualizer",
  "version": "1.0.0",
  "description": "Tube Joint Visualizer an interactive desktop app for designing rectangular/square tube joints.",
  "main": "src/main.js",
  "scripts": {
    "start": "npm run bundle && electron .",
    "bundle": "esbuild src/renderer/app-main.js --bundle --outfile=src/renderer/app-bundle.js --format=iife --global-name=TubeApp",
    "build": "npm run bundle && electron-builder",
    "build:win": "npm run bundle && electron-builder --win",
    "build:mac": "npm run bundle && electron-builder --mac",
    "build:linux": "npm run bundle && electron-builder --linux"
  },
  "keywords": [
    "3d",
    "visualization",
    "tube",
    "joint",
    "cad"
  ],
  "build": {
    "appId": "com.tubejoint.visualizer",
    "productName": "Tube Joint Visualizer",
    "directories": {
      "output": "dist"
    },
    "files": [
      "src/**/*",
      "assets/**/*",
      "node_modules/**/*"
    ],
    "asarUnpack": [
      "node_modules/three/**/*"
    ],
    "win": {
      "target": [
        "nsis"
      ]
    },
    "mac": {
      "target": [
        "dmg"
      ]
    },
    "linux": {
      "target": [
        "AppImage"
      ]
    }
  },
  "author": "",
  "license": "ISC",
  "dependencies": {
    "three": "^0.181.1"
  },
  "devDependencies": {
    "electron": "^33.2.1",
    "electron-builder": "^25.1.8",
    "esbuild": "^0.27.0"
  }
}
